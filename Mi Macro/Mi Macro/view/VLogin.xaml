<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mi_Macro.view.VLogin">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Frame" BasedOn="{StaticResource RoundedEntryFrameStyle}" />
        </ResourceDictionary>
    </ContentPage.Resources>x`
    
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Image Source="logo_512px.png" HorizontalOptions="CenterAndExpand" WidthRequest="160" HeightRequest="160" Margin="0,40"/>
            <Label Text="Welcome Back!" TextColor="#009BAA" FontSize="24" FontAttributes="Bold"/>
            <Label Text="Enter your username and password to continue." TextColor="#333333" FontSize="14" Margin="0,0,0,10"/>
            <Frame Style="{StaticResource RoundedEntryFrameStyle}" Margin="0,0,0,10">
                <Entry Placeholder="Username" TextColor="#333333" FontSize="16" BackgroundColor="Transparent"/>
            </Frame>
            <Frame Style="{StaticResource RoundedEntryFrameStyle}" Margin="0,0,0,10">
                <Entry Placeholder="Password" TextColor="#333333" FontSize="16" IsPassword="True"/>
            </Frame>
            <Label Text="Forgot password?" TextTransform="None" HorizontalTextAlignment="End" Margin="0,0,0,20"/>
            <Button Text="Log in" TextColor="#ffffff" BackgroundColor="#009BAA" CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>